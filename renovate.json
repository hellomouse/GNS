{
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":semanticCommitType(chore)",
    "group:monorepos"
  ],
  "statusCheckVerify": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "🛡️security🔒"
    ]
  },
  "packageRules": [
    {
      "groupName": "definitelyTyped",
      "packagePatterns": [
        "^@types/"
      ]
    }
  ],
  "automerge": true,
  "major": {
    "automerge": false
  }
}
